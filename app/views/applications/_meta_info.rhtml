<div id="meta" class="<%= @application.status.downcase %>">
		<ul>
			<li><span>Status</span> <%= @application.status.upcase %></li>
			<% if @application.status.downcase == "submitted" -%>
			<li><span>Submitted</span> <%= datestamp @application.submitted_at %></li>
			<% else -%>
			<li><span>Started</span> <%= datestamp @application.created_at %></li>
			<% end -%>
			<li><span>Payment</span> <%= @application.payment_status.upcase %></li>
			<li><span>Staff Reference</span> <%= @application.staff_reference.status.upcase %></li>
			<li><span>Discipler Reference</span> <%= @application.discipler_reference.status.upcase %></li>
			<li><span>Roommate Reference</span> <%= @application.roommate_reference.status.upcase %></li>
			<li><span>Friend Reference</span> <%= @application.friend_reference.status.upcase %></li>
		</ul>
</div>