<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>STINT/Internship/PTFS Tool</title>
  <%= stylesheet_link_tag "print", :media => 'print' %>
  <%= stylesheet_link_tag "base" %>

  <script type="text/javascript" charset="utf-8">
    var answer_sheet_type = '<%= @answer_sheet.class %>'
  </script>
  <%= csrf_meta_tag %>
  <script type="text/javascript" charset="utf-8">
    <%#= raw Rack::TimeZone::Javascript %>
    //setTimezoneCookie()
  </script>
  <%= stylesheet_link_tag asset_path('application.css') %>
  <%= javascript_include_tag asset_path("application.js") %>
  <% if @viewing %>
    <%= stylesheet_link_tag asset_path('fe.viewing.css') %>
  <% end %>
</head>
<body>

<div id="wrapper">

   <div id="header" style="height: 72px;">
     <%= image_tag "cru_logo_top.jpg", :style => "position: absolute; padding-left: 10px; padding-top: 5px;" %>
     <h1 style="display: inline; position: absolute; color: #F3F3F3; margin: 4.5px 70px; line-height: 36px;">STINT/Internship/PTFS Application</h1>
   
     <%= render "fe/application/logout" %>
   </div>
   
   <% flash.each do |key, value| %>
     <div class="alert alert-<%= key %>"><%= value %></div>
   <% end %>

   <div id="main">
     <%= yield %>
   </div>
</div>
<div id="footerwrap">
  <div style="clear:both"></div>
  <div id="footer">
    <img src="/images/icons/lifebuoy.png" style="vertical-align: top; margin-right: 5px;"> If you're having any issues, or have a question about something, please <a href="mailto:help@campuscrusadeforchrist.com" class="issueslink">send us an email. <img src="/images/icons/mail.png" style="vertical-align: top; border: 0px;"></a>
  </div>
</div>
</body>
</html>
