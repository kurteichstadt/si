		<td><%= f.text_field :maxNoStudentAMale, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentAFemale, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentACouples, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentAFamilies, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentA, :class => "text" %></td>
	</tr>
	<tr>
		<td>Max # Student Participants</td>
		<td><%= f.text_field :maxNoStudentPMale, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentPFemale, :class => "text" %></td>
		<td><%= f.text_field :maxNoStudentPCouples, :class => "text" %></td>
