		<td><%= f.text_field :maxNoInternACouples, :class => "text" %></td>
		<td><%= f.text_field :maxNoInternAFamilies, :class => "text" %></td>
		<td><%= f.text_field :maxNoInternA, :class => "text" %></td>
	</tr>
	<tr>
		<td>Max # Intern Participants</td>
		<td><%= f.text_field :maxNoInternPMale, :class => "text" %></td>
		<td><%= f.text_field :maxNoInternPFemale, :class => "text" %></td>
		<td><%= f.text_field :maxNoInternPCouples, :class => "text" %></td>
