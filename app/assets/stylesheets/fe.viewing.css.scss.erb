.answer-page .page {
  width: 700px;
  padding: 18px 9px 18px 9px;
}

.answer-page .page h3 {
  margin-bottom: 18px;
}

.answer-page .page li {
  margin: 9px 0 18px;
}

#content {
  margin: 18px;
  background: #fff;
  padding: 18px;
}

h1 {
  margin-bottom: 18px;
  font-size: 24px;
  line-height: 36px;
}

table.list {
  width: 100%;
}

table.list th {
  font-size: 12px;
  font-weight: bold;
  border-bottom: solid 1px #ccc;
}

table.list td {
  padding: 4.5px 9px;
  border-bottom: solid 1px #eee;
}

table.list tr.alt td {
  background: #f3f3f3;
}

.add-link {
  display: block;
  height: 18px;
  padding-left: 24px;
  background: transparent url(/images/qe/icons/application_form_add.png) 4px 0 no-repeat;
  color: #4c7b31;
}

.actions {
  text-align: right;
}

.destroy {
  color: #f00;
}

a.questionnaire {
  display: block;
  height: 18px;
  padding-left: 27px;
  background: url(/images/qe/icons/application_form.png) 4px 0 no-repeat;
}

.answer {
  
}

#status {
  position: fixed;
  background: #69c;
  color: #fff;
  top: 50%;
  left: 50%;
  width: 200px;
  height: 45px;
  margin-top: -36px;
  margin-left: -100px;
  text-align: center;
  padding-top: 27px;
}

#status-img {
  vertical-align: middle;
}

#status-msg {
  font-weight: bold;
  margin-left: 9px;
}

.list-choices {
  margin-bottom: 18px;
}

.list-choices li {
  margin: 0;
}

.list-choices label {
  font-weight: normal;
}

.pay_view {
  padding: 9px;
  margin: 0 9px 18px;
  background: #f3f3f3;
  border: solid 1px #dadada;
}

.pay_view h4 {
  font-size: 12px;
  font-weight: normal;
  margin-bottom: 9px;
}

.pay_view .field {
  
}

.pay_view label {
  float: left;
  width: 125px;
}

.pay_view input, .pay_view img {
  vertical-align: middle;
}

#errorExplanation ul {
  margin-bottom: 18px;
}

#errorExplanation li {
  margin: 0 0 0 25px !important;
  padding: 0 !important;
}

a.button:visited, a.button:link {
  color: #FFFFFF;
  font-weight: Bold;
  font-size: 13px;
  text-decoration: none;
  background: #336699;
  margin: auto;
  padding-right: 4px;
  padding-left: 4px;
  padding-top: 2px;
  padding-bottom: 2px;
  border-style: outset;
  border-width: 2px;
  border-color: #dcdcdc #696969 #696969 #dcdcdc;
  width: auto
}

a.button:active, a.button:hover {
  color: #FFFFFF;
  font-weight: bold;
  text-decoration: none;
  background-color: #336699;
  margin: auto;
  padding-right: 4px;
  padding-left: 4px;
  padding-top: 2px;
  padding-bottom: 2px;
  border-style: inset;
  border-width: 2px;
  border-color: #696969 #dcdcdc #dcdcdc #696969;
  width: auto
}

.rating td {
  padding: 0 2px !important;
  text-align: center;
  line-height: normal;
  border: none !important;
}

.print-links a {
  margin-right: 9px;
}

span.answer {
  color: #339;
}

span.answerwarn {
  color: #f00;
}

.readonly {
  list-style: none;
  margin-left: 0;
  padding-left: 18px;
}

.readonly li {
  margin-bottom: 9px !important;
}

.grid {
  width: 95%;
  border-collapse: collapse;
}

.grid td, .grid th {
  padding: 2px 4px;
  vertical-align: middle;
  border: solid 1px #eee;
}

.grid p {
  margin: 0;
}

.grid .text {
  width: 250px;
}

.grid .validate-number, .grid .validate-currency-dollar {
  width: 50px;
}

.questions li {
  clear: left;
  margin-bottom: 9px;
  overflow: hidden;
}

.controls {
  float: left;
  background: #f3f3f3;
  padding: 2px 2px 0 2px;
  border: solid 1px #dadada;
}

.controls ul li {
  width: 11px;
  height: 11px;
  padding: 0 !important;
  margin: 0 0 3px 0 !important;
  overflow: hidden;
}

.q {
  margin-left: 21px;
}

.edit {
  display: block;
  text-indent: -9000px;
  background: url(/images/qe/icons/pencil.png) 0 0 no-repeat;
}

.handle {
  width: 11px;
  height: 11px;
  overflow: hidden;
  text-indent: -9000px;
  background: url(/images/qe/icons/move.png) 0 0 no-repeat;
  display: block;
}

.remove {
  width: 11px;
  height: 11px;
  overflow: hidden;
  text-indent: -9000px;
  background: url(/images/qe/icons/arrow_out.png) 0 0 no-repeat;
  display: block;
}

a.help {
  font-style: normal;
  font-size: 16px;
  text-decoration: none;
  font-weight: bold;
  text-align: center;
  display: block;
  border: solid 1px #dadada;
  width: 16px;
  height: 16px;
  background: #f3f3f3;
  color: #066;
}
