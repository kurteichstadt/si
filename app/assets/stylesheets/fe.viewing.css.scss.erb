.list-elements {
  margin-left: -2px;
}

.list-elements li {
  float: left;
  width: 125px;
  margin: 2px;
  background: #eee;
}

#list-pages a, .list-elements a, #list-info-pages a {
  display: block;
  background: #eee url(/images/qe/icons/page_white.png) 2px 4px no-repeat;
  padding: 3px 3px 3px 21px;
  border: solid 1px #ccc;
  text-decoration: none;
  height: 30px;
  line-height: 16px;
}

#list-pages a:hover, #list-info-pages a:hover {
  background-color: #e6e6e6;
}

#list-pages .active a, #list-info-pages .active a {
  background-color: #ffc;
  font-weight: bold;
}

#list-pages .incomplete a {
  background: #ffe5df url(/images/qe/icons/page_white_error.png) 4px 4px no-repeat;
  border-color: #efbeb3;
}

#list-pages .valid a {
  background: #e5ffdf url(/images/qe/icons/page_valid.png) 4px 4px no-repeat;
  border-color: #0c0;
}

#link-page-add {
  display: block;
  height: 18px;
  padding: 0 0 0 24px;
  background: transparent url(/images/qe/icons/page_white_add.png) 4px 0 no-repeat;
  color: #4c7b31;
}

#preview {
  float: right;
  width: 650px;
  margin: 18px 0px 36px 0;
}

#panel {
  background: #fff;
  border-top: solid 1px #fff;
  clear: both;
  padding: 9px 0 54px;
}

.panel {
  padding: 9px;
  border-top: solid 2px #fff;
  border-bottom: solid 2px #fff;
}

#panel-properties-element {
  background: #eff6ff;
  border-color: #a4caef;
}

#panel-properties-page {
  background: #cfc;
  border-color: #abd6ab;
}

.page {
  background: #fff;
  padding: 18px 0;
}

.questions li {
  margin: 0;
  padding: 0 9px;
}

label.desc {
  display: block;
}

.buttons {
  text-align: right;
}

.text {
  border: solid 1px #ccc;
  width: 384px;
}

.validate-phone, .validate-date {
  width: 192px;
}

.validate-number, .validate-currency-dollar {
  width: 96px;
}

label .required {
  color: #900;
  font-style: italic;
  margin-left: 5px;
}

label .optional {
  color: #005b89;
  font-style: italic;
  margin-left: 5px;
}

#preview .ctl {
  display: block;
  color: #333;
  border: solid 1px #eee;
  padding: 6px 24px 9px 9px;
  cursor: -moz-grab;
  text-decoration: none;
}

#preview .ctl:hover {
  border: dotted 1px #fcc !important;
  background: transparent url(/images/qe/icons/pencil.png) 490px 5px no-repeat;
}

.page .ctl, .questions li .ctl {
  border: solid 1px #fff !important;
}

.page .ctl, .questions li .ctl:hover {
  
}

.questions li.active {
  background: #eff6ff;
}

.questions li.active .ctl {
  border: solid 1px #eff6ff !important;
}

#link-page-name.active {
  background: #cfc;
}

.checkbox, .radio {
  display: block;
  height: 13px;
  line-height: 10px;
  margin: 6px 0pt 0pt 9px;
  width: 13px;
  vertical-align: absbottom;
}

label.choice {
  font-size: 10px;
  color: #474747;
  display: block;
  line-height: 10px;
  margin: -16px 0pt 0pt 30px;
  padding: 4px 0pt 5px;
}

label.horiz {
  display: inline;
  margin-left: 0;
}
